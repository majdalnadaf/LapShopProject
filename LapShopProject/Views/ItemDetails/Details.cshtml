<!-- product section start -->
<section class="section-b-space ratio_asos">
    <div class="container">
        <div class="row">
            <div class="col-12 product-related">
                <h2>@ResWebsite.TitRelatedProducts</h2>
            </div>
        </div>
        <div class="row search-product">

            @foreach (var item in Model.lstRelatedItems)
            {
                <div class="col-xl-2 col-md-4 col-sm-6">
                    <div class="product-box">
                        <div class="img-wrapper">
                            <div class="front">

                                <a asp-controller="ItemDetails" asp-action="Details" asp-route-itemId="@item.ItemId">
                                    <img src="~/Admin/Uploads/Images/Items/@item.ImageName"
                                         class="img-fluid blur-up lazyload bg-img" alt="">
                                </a>
                            </div>
                            <div class="back">
                                <a asp-controller="ItemDetails" asp-action="Details" asp-route-itemId="@item.ItemId">
                                    <img src="~/Admin/Uploads/Images/Items/@item.ImageName"
                                         class="img-fluid blur-up lazyload bg-img" alt="">
                                </a>
                            </div>
                            <div class="cart-info cart-wrap">
                                <a data-toggle="modal" asp-controller="Cart" asp-action="AddToCart" asp-route-itemId="@item.ItemId"  title="@ResWebsite.TitAddtoCart">
                                    <i class="ti-shopping-cart"></i>
                                </a>
                                <a asp-controller="WishList" asp-action="AddToWishList" asp-route-itemId="@item.ItemId"
                                   title="@ResWebsite.TitAdd_to_Wishlist">
                                    <i class="ti-heart" aria-hidden="true"></i>
                                </a>

                                <a href="compare.html"
                                   title="@ResWebsite.TitCompare">
                                    <i class="ti-reload" aria-hidden="true"></i>
                                </a>

                            </div>
                        </div>
                        <div class="product-detail">
                            <div class="rating">
                                @if (Model.Item.Rating <= 0)
                                {
                                    <h6 class="text-primary">
                                         @ResWebsite.TitNewItem
                                    </h6>
                                }
                                else
                                {

                                    var idx = 0;

                                    @for (; idx < Model.Item.Rating; idx++)
                                    {
                                        <i class="fa fa-star" style=" color: gold;"></i>
                                    }

                                    @for (; idx < 5; idx++)
                                    {
                                        <i class="fa fa-star" style=" color: #ccc;"></i>
                                    }
                                }


                            </div>
                            <a href="product-page(no-sidebar).html">
                                <h6>@item.ItemName</h6>
                            </a>
                            <h4>@item.SalesPrice</h4>

                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
