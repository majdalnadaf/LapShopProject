<!-- section start -->
<section>
    <div class="collection-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product-slick">

                        @for (int i = 0; i < Math.Min(4, Model.lstItemImage.Count); i++)
                        {
                            <div>
                                <img loading="lazy" src="~/Admin/Uploads/Images/Items/@Model.lstItemImage[i].ImageName" alt=""
                                     class="img-fluid blur-up lazyload image_zoom_cls-@i">

                            </div>
                        }

                    </div>
                    <div class="row">
                        <div class="col-12 p-0">
                            <div class="slider-nav">

                                @for (int i = 4; i < Math.Min(8, Model.lstItemImage.Count); i++)
                                {
                                    <div>
                                        <img loading="lazy" src="~/Frontend/assets/images/pro3/1.jpg" alt=""
                                             class="img-fluid blur-up lazyload">
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 rtl-text">
                    <div class="product-right">
                        <h2 class="mb-0">@Model.Item.ItemName</h2>
                        <h5 class="mb-2">by <a >@Model.Item.CategoryName</a></h5>
                        <h4><del>@Model.Item.SalesPrice</del><span> @Model.ItemDiscount.DiscountPercent @ResWebsite.lblOff</span></h4>
                        <h3>@(Model.Item.SalesPrice * Model.ItemDiscount.DiscountPercent)</h3>

                        <div class="product-description border-product">

                            <h6 class="product-title">@ResWebsite.lblQuantity</h6>
                            <div class="qty-box">
                                <div class="input-group">
                                    <span class="input-group-prepend">
                                        <button type="button"
                                                class="btn quantity-left-minus" data-type="minus" data-field="">
                                            <i class="ti-angle-left"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="product-buttons">

                                <a  asp-controller="Order" asp-action="AddToCart" asp-route-itemId="@Model.Item.ItemId"
                                class="btn btn-solid">@ResWebsite.lblAddToCart</a>

                        </div>
                        <div class="border-product">
                            <h6 class="product-title">@ResWebsite.TitProductDetails</h6>
                            <p>
                                @Model.Item.Description
                            </p>
                        </div>
                        <div class="border-product">
                            <h6 class="product-title">@ResWebsite.TitShareIt</h6>
                            <div class="product-icon">
                                <ul class="product-social">
                                    <li><a href="https://www.facebook.com/your-facebook-page" target="_blank"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="https://plus.google.com/your-google-plus-page" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                                    <li><a href="https://twitter.com/your-twitter-handle" target="_blank"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="https://www.instagram.com/your-instagram-handle" target="_blank"><i class="fa fa-instagram"></i></a></li>
                                    <li><a href="your-rss-feed-url.xml" target="_blank"><i class="fa fa-rss"></i></a></li>
                                </ul>
                                <form class="d-inline-block">
                                    <button class="wishlist-btn">
                                        <i class="fa fa-heart"></i><span class="title-font">@ResWebsite.lblAddToWishList</span>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="border-product">
                            <h6 class="product-title">@ResWebsite.TitTimeReminder</h6>
                            <div class="timer">
                                <p id="demo">
                                    <span>
                                        @DateTime.Now.Day
                                        <span class="padding-l">:</span>
                                        <span class="timer-cal">@ResWebsite.TitDays</span>
                                    </span>
                                    <span>
                                        @DateTime.Now.Hour
                                        <span class="padding-l">:</span>
                                        <span class="timer-cal">@ResWebsite.TitHrs</span>
                                    </span>
                                    <span>
                                        @DateTime.Now.Minute
                                        <span class="padding-l">:</span>
                                        <span class="timer-cal">@ResWebsite.TitMin</span>
                                    </span>
                                    <span>
                                        @DateTime.Now.Second
                                        <span class="padding-l">:</span>
                                        <span class="timer-cal">@ResWebsite.TitSec</span>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
