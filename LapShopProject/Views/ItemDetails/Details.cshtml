                                    <span class="text-danger" asp-validation-for="@Model.VwReview.CustomerEmail"></span>

                                </div>
                                <div class="col-md-12">
                                    <label for="review">@ResWebsite.TitReviewTitle</label>
                                    <input asp-for="VwReview.ReviewTitle" type="text" class="form-control" id="review" placeholder="Enter your Review Subjects">
                                    <span class="text-danger" asp-validation-for="@Model.VwReview.ReviewTitle"></span>

                                </div>
                                <div class="col-md-12">
                                    <label for="review">@ResWebsite.TitReview_Des</label>
                                    <textarea asp-for="VwReview.ReviewDescription" class="form-control" placeholder="Wrire Your Testimonial Here"
                                              id="exampleFormControlTextarea1" rows="6"></textarea>
                                    <span class="text-danger" asp-validation-for="@Model.VwReview.ReviewDescription"></span>

                                </div>
                                <div class="col-md-12">

                                    <button class="btn btn-solid" type="submit">
                                        @ResWebsite.lblSubmitYourReview
                                    </button>
                                </div>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
