@model VwUserRegister


@section PluginsCssForThisPage
{
    <link rel="stylesheet preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" integrity="sha384-0evSXhkEG3fnBS4hMqUw6WVTjFuq7ltTOvCWjFVCN6wEjHnJvkzHCenfx9x" crossorigin="anonymous">

}

<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>@ResWebsite.TitCreateAccount</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">@ResWebsite.lblHome</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ResWebsite.TitCreateAccount</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">


                <div class="alert alert-danger list-group" role="alert" asp-validation-summary="ModelOnly">

                </div>

               <br>

                <h3>@ResWebsite.TitCreateAccount</h3>
                <div class="theme-card">
                    <form class="theme-form" method="post" enctype="multipart/form-data"
                          asp-controller="UserAccount" asp-action="Save" role="form">
                        <div class="form-row">
                            <div class="col-md-6">

                                <!--hidden input for validation-->
                                      <input asp-for="Role" type="hidden"  />
                                      <input asp-for="ReturnUrl" type="hidden"  />
                                <!--hidden input for validation-->

                                <label for="fname">@ResWebsite.TitFirstName</label>
                                <input asp-for="FirstName" type="text" class="form-control" id="fname" placeholder="@ResWebsite.TitFirstName"
                                       required="">
                                       <span asp-validation-for="FirstName" class="text-danger" ></span>
                            </div>
                            <div class="col-md-6">
                                <label for="lname">@ResWebsite.TitLastName</label>
                                <input asp-for="LastName" type="text" class="form-control" id="lname" placeholder="@ResWebsite.TitLastName"
                                       required="">
                                <span asp-validation-for="LastName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="email">@ResWebsite.TitEmail</label>
                                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="@ResWebsite.TitEmail" required="">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                            <div class="col-md-6">
                                <label for="review">@ResWebsite.TitPass</label>
                                <input asp-for="Password" type="password" class="form-control" id="review"
                                       placeholder="@ResWebsite.TitPass" required="">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>

                            <button type="submit" class="btn btn-solid">@ResWebsite.TitCreateAccount</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
@section CustomScriptForThisPage
{

    <!-- Validation File Js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <!-- Validation File Js-->
}