@model TbCategory

@{
}

@section PluginCssForThisPage
{

}


<!-- partial --> 
<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> @ResGeneral.lblAdd @ResAdmin.lblCategory </h3>

            </div>
            <div class="row grid-margin">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"> @ResAdmin.lblCategoryInfo</h4>
                            <form  asp-area="Admin" asp-controller="Category" asp-action="Save"
                                role="form" enctype="multipart/form-data" method="post">

                                <!-- hidden input for Category-->
                                <input type="hidden" asp-for="CategoryId" />
                                <input type="hidden" asp-for="CreatedBy" />
                                <input type="hidden" asp-for="CreatedDate" />
                                <input type="hidden" asp-for="CurrentState" />
                                <!-- hidden input for Category-->
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="form-group row">
                                            <div class="col-lg-3">
                                                <label class="col-form-label">@ResAdmin.lblCategoryName</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <input asp-for="CategoryName" class="form-control"
                                                       maxlength="50" id="" type="text" placeholder="@ResAdmin.lblCategoryName">
                                                       <span  asp-validation-for="CategoryName" class="text-danger" ></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-lg-3">
                                                <label class="col-form-label">@ResAdmin.lblImage</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <input onchange="displayImage(this)" id="imageFile"
                                                       type="file" name="Files" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-lg-3">
                                                <label class="col-form-label">@ResAdmin.lblShowInHomePage</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <input asp-for="ShowInHomePage" type="checkbox" class="form-check-input"
                                                        id="" checked> @ResAdmin.lblShowInHomePage </label>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-lg-4">
                                        <div class="form-group row">

                                            <div>
                                                <div class="form-group-row">
                                                    <img id="outputImage" src="~/Admin/Uploads/Images/@Model.ImageName" alt="Item Image"
                                                         style="max-width: 400px; max-height: 300px;" />
                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                </div>


                                <button type="submit" class="btn btn-gradient-primary me-2">@ResGeneral.lblSave</button>
                                <a href="/Admin/Category/List" class="btn btn-dark">@ResGeneral.lblCancel</a>

                            </form>

                        </div>
                    </div>
                </div>
            </div>




            @section PluginJsForThisPage
            {
                <script src="~/Admin/assets/vendors/jquery-validation/jquery.validate.min.js"></script>
                <script src="~/Admin/assets/vendors/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
            }


            @section CustomJsForThisPage
            {
                <script src="~/Admin/assets/js/form-validation.js"></script>
                <script src="~/Admin/assets/js/bt-maxLength.js"></script>

                <!-- Validation File Js-->
                <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

                <!-- Validation File Js-->



                <!-- Custom js for display image-->
                <script src="~/Admin/assets/js/CustomJs.js"> </script>




            }
