
@model List<VwSalesOrders>


    
@* Plugin Css For This Page*@
@section PluginCssForThisPage
{

}



<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Sales Invoices List </h3>
            </div>
            <div class="row">
                <div class="col-12 grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"> Sales Invoices</h4>
                            <div class="row">
                                <div class="table-sorter-wrapper col-lg-12 table-responsive">
                                    <table id="sortable-table-2" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th class="sortStyle">InvoiceDate <i class="mdi mdi-chevron-down"></i></th>
                                                <th class="sortStyle">CustomerName <i class="mdi mdi-chevron-down"></i></th>
                                                <th class="sortStyle">CreatedBy <i class="mdi mdi-chevron-down"></i></th>
                                                <th class="sortStyle">CreatedDate <i class="mdi mdi-chevron-down"></i></th>
                                                <th class="sortStyle">CountryName <i class="mdi mdi-chevron-down"></i></th>
                                                <th class="sortStyle">DeliverName <i class="mdi mdi-chevron-down"></i></th>
                                                <th>@ResGeneral.lblAction</th>

                                            </tr>
                                        </thead>
                                        <tbody>

                                            @for (int i = 0; i < Model.Count; i++)
                                            {
                                                <tr>
                                                    <td> @Model[i].InvoiceDate </td>
                                                    <td> @Model[i].CustomerName</td>
                                                    <td> @Model[i].CreatedBy </td>
                                                    <td> @Model[i].CreatedDate </td>
                                                    <td> @Model[i].CountryName </td>
                                                    <td> @Model[i].DeliverName </td>
         

                                                    <td>
                                                        <a asp-area="Admin" asp-controller="SalesOrders" asp-action="Details" asp-route-invoiceId="@Model[i].InvoiceId"
                                                           class="btn btn-outline-info">Details</a>

                                                    </td>


                                                </tr>



                                            }



                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        @*Plugins Js For This Page *@

        @section PluginJsForThisPage
        {
            <script src="~/Admin/assets/js/jq.tablesort.js"></script>
        }

        @*Custom Js For This Page *@

        @section CustomJsForThisPage
        {
            <script src="~/Admin/assets/js/tablesorter.js"></script>

        }
