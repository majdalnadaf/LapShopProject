@model VwUserRegister

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="alert alert-danger list-group" role="alert" asp-validation-summary="ModelOnly">
                </div>
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-dark text-left p-5">
                        <div class="brand-logo">
                            <img src="~/Admin/assets/images/logo.svg">
                        </div>
                        <h4>Enter new info</h4>

                        <form class="pt-3" asp-area="Admin" asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data" role="form">
                            <div class="form-group">
                                <input asp-for="FirstName" type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="FirstName">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="LastName" type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="LastName">
                                <span asp-validation-for="LastName" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <input asp-for="Email" type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>

                            <div class="form-group">
                                <input name="oldPassword" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Old Password">


                            </div> 

                            <div class="form-group">
                                <input asp-for="Password" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="New Password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>

                            <input type="hidden" name="userId" value="@ViewBag.UserId" />


                            <div class="form-group">
                                <span class="">Select the role of user</span>
                                <select asp-for="Role" name="roleId" class="form-select"
                                        asp-items="@(new SelectList(ViewBag.RoleList,"Id","Name"))"
                                        style="  background-color: #900; color: #fff;">
                                </select>
                            </div>


                            <div class="mt-3">
                                <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Update</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
