@using Microsoft.AspNetCore.Identity;
@using DataAccess.Identity;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Admin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Admin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    @RenderSection("PluginCssForThisPage", false)
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Admin/assets/css/demo_4/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Admin/assets/images/favicon.png" />
</head>
<body>


    <div class="container-scroller">
        <!-- partial:../../partials/_horizontal-navbar.html -->
        <div class="horizontal-menu">
            <nav class="navbar top-navbar col-lg-12 col-12 p-0">
                <div class="container">
                    <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                        <a class="navbar-brand brand-logo" href="/Admin/Home/Dashbord"><img src="~/Admin/assets/images/logo.svg" alt="logo" /></a>
                        <a class="navbar-brand brand-logo-mini" href="/Admin/Home/Dashbord"><img src="~/Admin/assets/images/logo-mini.svg" alt="logo" /></a>
                    </div>
                    <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">

                        <ul class="navbar-nav navbar-nav-right">
                            <li class="nav-item nav-profile dropdown">

                                <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="nav-profile-text">
                                        <p class="text-light">
                                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                                            {
                                                var user = await SignInManager.UserManager.GetUserAsync(User);

                                                @if (user != null)
                                                {
                                                    @user.Email
                                                }
                                            }

                                        </p>
                                    </div>
                                </a>



                                <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Logout">
                                        <i class="mdi mdi-logout me-2 text-primary"></i> Signout
                                    </a>
                                </div>

                            </li>


                            <li class="nav-item d-none d-lg-flex full-screen-link">
                                <a class="nav-link">
                                    <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                                </a>
                            </li>

                        </ul>

                        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="horizontal-menu-toggle">
                            <span class="mdi mdi-menu"></span>
                        </button>
                    </div>
                </div>
            </nav>
            <nav class="bottom-navbar">
                <div class="container">
                    <ul class="nav page-navigation">
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Home/Dashbord">
                                <span class="menu-title">@ResAdmin.lblDashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Category/List">
                                <span class="menu-title">@ResAdmin.lblCategories</span>
                            </a>
                        </li>
                        <li class="nav-item mega-menu">
                            <a href="/Admin/Item/List" class="nav-link">
                                <span class="menu-title">@ResAdmin.lblItems</span>
                                <i class="menu-arrow"></i>
                            </a>

                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Os/List" class="nav-link">
                                <span class="menu-title">@ResAdmin.lblOperatingSystemName</span>
                                <i class="menu-arrow"></i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Admin/Country/List" class="nav-link">
                                <span class="menu-title">@ResAdmin.lblCountry</span>
                                <i class="menu-arrow"></i>
                            </a>
                        </li>

                        <li class="nav-item mega-menu">
                            <a href="/Admin/PruchaseOrders/List" class="nav-link">
                                <span class="menu-title">@ResAdmin.lblPurhcaseInvoice</span>
                                <i class="menu-arrow"></i>
                            </a>

                        </li>
                        <li class="nav-item mega-menu">
                            <a href="/Admin/SalesOrders/List" class="nav-link">
                                <span class="menu-title">@ResAdmin.lblSalesInvoice</span>
                                <i class="menu-arrow"></i>
                            </a>
                        </li>


                        <li class="nav-item">
                            <a href="/Admin/User/List" class="nav-link">
                                <span class="menu-title">@ResAdmin.lblUsers</span>
                                <i class="menu-arrow"></i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Admin/AdditionalPages/List" class="nav-link">
                                <span class="menu-title">@ResAdmin.lblAdditionalPages</span>
                                <i class="menu-arrow"></i>
                            </a>
                        </li>



                        <li class="nav-item">
                            <a href="/Admin/Authorization/Edit" class="nav-link">
                                <span class="menu-title">@ResAdmin.lblAuthorization</span>
                                <i class="menu-arrow"></i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Admin/Setting/Edit" class="nav-link">
                                <span class="menu-title">@ResAdmin.lblSetting</span>
                                <i class="menu-arrow"></i>
                            </a>
                        </li>

                    </ul>
                </div>
            </nav>
        </div>



        <div>
            @RenderBody()
        </div>


        <!-- partial:../../partials/_footer.html -->
        <footer class="footer">
            <div class="container">
                <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2021 <a href="https://www.bootstrapdash.com/" target="_blank">BootstrapDash</a>. All rights reserved.</span>
                    <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="mdi mdi-heart text-danger"></i></span>
                </div>
            </div>
        </footer>
        <!-- partial -->
    </div>
    <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Admin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    @RenderSection("PluginJsForThisPage", false)
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Admin/assets/js/off-canvas.js"></script>
    <script src="~/Admin/assets/js/hoverable-collapse.js"></script>
    <script src="~/Admin/assets/js/misc.js"></script>
    <script src="~/Admin/assets/js/settings.js"></script>
    <script src="~/Admin/assets/js/todolist.js"></script>
    <script src="~/Admin/assets/js/jquery.cookie.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    @RenderSection("CustomJsForThisPage", false)
    <!-- End custom js for this page -->
</body>
</html>
